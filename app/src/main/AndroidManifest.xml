<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/alsafty_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdminApp"
        tools:targetApi="31">
        <activity
            android:name=".Activites.AttendanceActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.ContactUsActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.PrivacyPolicyActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.TermsAndConditionsActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.ProfileAcivity"
            android:exported="false" />
        <activity
            android:name=".Activites.ChangeLanguageAcivity"
            android:exported="false" />
        <activity
            android:name=".Activites.ScanQrActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>